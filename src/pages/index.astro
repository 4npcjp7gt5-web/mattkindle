---
const siteTitle = "Matt Kindle";
const tagline = "MATT KINDLE";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{siteTitle} — Official Website</title>
    <meta name="description" content="Official website of singer-songwriter Matt Kindle" />

    <!-- Fonts -->
    <link href="https://fonts.cdnfonts.com/css/rubik-dirt" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Inter:wght@300;400;500&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        --bg: #0f0f0f;
        --bg-soft: #161616;
        --text: #f3f3f3;
        --muted: #b5b5b5;
        --accent: #10b981;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: "Inter", sans-serif;
        background: var(--bg);
        color: var(--text);
        line-height: 1.6;
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      /* NAV */
      .nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background: rgba(5, 120, 90, 0.9);
        backdrop-filter: blur(6px);
        z-index: 10;
        padding: 0.25rem 1.5rem;
      }

      .nav-inner {
        max-width: 1100px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .nav a {
        font-size: 0.9rem;
        margin-left: 1.5rem;
      }

      .nav-logo {
        height: 50px;
        transform: translateY(25%);
        filter: drop-shadow(0 0 10px rgba(255,255,255,0.8));
      }

      @media (max-width: 768px) {
        .nav-logo {
          height: 36px;
          transform: translateY(20%);
        }
      }

      /* HERO (FULL BLEED) */
      .hero {
        position: relative;
        width: 100vw;
        height: 85vh;
        max-height: 1000px;         /* ← prevents ultra-wide blowup */
  			min-height: 600px;
        display: flex;
        align-items: flex-end;
        justify-content: center;
        overflow: hidden;
        padding-bottom: 6rem;
      }

      .hero-img {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-postition: center 65%;
        background: #000;
        z-index: 0;
      }

      .hero-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.45);
        z-index: 1;
      }

      .hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
      }

      .hero-logo {
        max-width: 250px;
        width: 60%;
        margin: 0 auto 1rem;
        filter: drop-shadow(0 0 15px rgba(16,185,129,0.8));
      }

      .hero-tagline {
        font-family: "Rubik Dirt", serif;
        font-size: clamp(.6rem, 1.45vw, .85rem);
        letter-spacing: 0.3em;
        color: var(--accent);
        text-shadow: 0 0 8px rgba(16,185,129,0.6);
      }

      @media (max-width: 1024px) {
        .hero {
          height: 65vh;
          padding-bottom: 4rem;
        }

        .hero-img {
          object-fit: cover;
          object-position: center bottom;
        }

        .hero-logo {
          max-width: 180px;
        }

        .hero-tagline {
          font-size: clamp(.5rem, 1.35vw, .85rem);
        }
      }

      /* MAIN CONTENT */
      main {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 1.5rem 6rem;
      }

      section {
        margin-top: 6rem;
      }

      h2 {
        font-family: "Playfair Display", serif;
        font-size: 2rem;
        margin-bottom: 1.5rem;
        color: var(--accent);
      }

      .music iframe {
        border-radius: 12px;
        margin-top: 1rem;
      }

      .about {
        max-width: 640px;
      }

      .about p {
        margin-bottom: 1rem;
        color: var(--muted);
      }

      .contact a {
        display: inline-block;
        margin-right: 1.5rem;
        margin-top: 1rem;
        color: var(--muted);
      }

      footer {
        margin-top: 6rem;
        text-align: center;
        font-size: 0.8rem;
        color: var(--muted);
      }
    </style>
  </head>

  <body>
    <!-- NAV -->
    <nav class="nav">
      <div class="nav-inner">
        <img src="images/mklogobw.png" class="nav-logo" alt="Logo" />
        <div>
          <a href="#music">Music</a>
          <a href="#shows">Shows</a>
          <a href="#about">About</a>
          <a href="#contact">Contact</a>
        </div>
      </div>
    </nav>

    <!-- HERO -->
    <section class="hero">
      <img src="images/hero.jpg" class="hero-img" alt="Hero image" />
      <div class="hero-overlay"></div>
      <div class="hero-content">
        <img src="images/mklogobw.png" class="hero-logo" alt="Matt Kindle logo" />
        <p class="hero-tagline">{tagline}</p>
      </div>
    </section>

    <!-- MAIN -->
    <main>
      <section id="music" class="music">
        <h2>Music</h2>
				<iframe allow="autoplay *; encrypted-media *; fullscreen *; clipboard-write" frameborder="0" height="450" style="width:100%;max-width:660px;overflow:hidden;border-radius:10px;" sandbox="allow-forms allow-popups allow-same-origin allow-scripts allow-storage-access-by-user-activation allow-top-navigation-by-user-activation" src="https://embed.music.apple.com/us/playlist/matts-songs/pl.u-55D66M3tEpB3q&theme?dark"></iframe>        
				<iframe src="https://open.spotify.com/embed/artist/4kPWNGfm8xjSXSsZesTk7y" width="100%" height="450" loading="lazy"></iframe>

      </section>

      <section id="about" class="about">
        <h2>About</h2>
        <p>Matt Kindle is a singer-songwriter crafting honest songs rooted in melody, memory, and moments that linger.</p>
        <p>Inspired by God, family, and fun with friends.</p>
      </section>

      <section id="contact" class="contact">
        <h2>Contact</h2>
        <a href="mailto:mallets.prompts0z@icloud.com">Email</a>
        <a href="https://www.instagram.com/matt_kindle/" target="_blank">Instagram</a>
        <a href="https://open.spotify.com/artist/4kPWNGfm8xjSXSsZesTk7y" target="_blank">Spotify</a>
        <a href="https://www.youtube.com/@mattkindlemusic" target="_blank">YouTube</a>
      </section>

      <footer>
        © {new Date().getFullYear()} Matt Kindle
      </footer>
    </main>
  </body>
</html>