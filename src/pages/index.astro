---
const siteTitle = "Matt Kindle";
const tagline = "MATT KINDLE";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{siteTitle}</title>
    <meta name="description" content="Official website of singer-songwriter Matt Kindle" />

    <!-- Google Fonts -->
    <link href="https://fonts.cdnfonts.com/css/rubik-dirt" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Inter:wght@300;400;500&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        --bg: #0f0f0f;
        --bg-soft: #161616;
        --text: #f3f3f3;
        --muted: #b5b5b5;
        --accent: #10b981; /* emerald */
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: "Inter", sans-serif;
        background: var(--bg);
        color: var(--text);
        line-height: 1.6;
        -webkit-font-smoothing: antialiased;
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      main {
        max-width: 1100px;
        margin: 0 auto;
        padding: 3rem 1.5rem 6rem;
      }

      section {
        margin-top: 6rem;
      }

      h1,
      h2 {
        font-family: "Playfair Display", serif;
        letter-spacing: 0.02em;
      }

      h2 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
        color: var(--accent);
      }

      /* HERO */
      .hero {
        position: relative;
        min-height: 100vh;
        background-image: url("/mattkindle/images/hero.jpg");
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: flex-end; /* push content to bottom half */
        justify-content: center;
      }

      .hero-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.45);
        z-index: 1;
      }

      .hero-content {
        position: relative;
        z-index: 2;
        padding: 2rem 1.5rem 4rem; /* extra padding at bottom */
        max-width: 1100px;
        text-align: center;
      }

      .hero-logo {
        max-width: 250px;
        width: 60%;
        height: auto;
        display: block;
        margin: 0 auto 1rem auto;

        /* Emerald glow */
        filter: drop-shadow(0 0 15px rgba(16, 185, 129, 0.8));
        transition: transform 0.3s ease, filter 0.3s ease;
      }

      .hero-logo:hover {
        transform: scale(1.05);
        filter: drop-shadow(0 0 20px rgba(16, 185, 129, 1));
      }

      .hero p {
        color: var(--muted);
        font-size: 1.1rem;
        margin-top: 0.5rem;
      }

    .hero-tagline {
  font-family: 'Rubik Dirt', serif, Georgia, Times, serif;
  font-size: clamp(2rem, 5vw, 3rem);
  color: var(--accent); /* emerald green */
  text-shadow: 0 0 8px rgba(16, 185, 129, 0.6);
  margin-top: 0.5rem;

  letter-spacing: 0.25em; /* add spacing between letters */
}


    .hero-tagline:hover {
        text-shadow: 0 0 12px rgba(16, 185, 129, 0.9);
        }

      /* NAV */
      .nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background: rgba(15, 15, 15, 0.85);
        backdrop-filter: blur(6px);
        z-index: 10;
      }

      .nav-inner {
        max-width: 1100px;
        margin: 0 auto;
        padding: 1rem 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .nav a {
        font-size: 0.9rem;
        margin-left: 1.5rem;
        color: var(--muted);
      }

      .nav a:hover {
        color: var(--accent);
      }
.nav-logo {
  height: 40px; /* adjust size to fit nav */
  width: auto;
  filter: drop-shadow(0 0 8px rgba(16, 185, 129, 0.8)); /* emerald glow */
  transition: transform 0.3s ease, filter 0.3s ease;
}

.nav-logo:hover {
  transform: scale(1.05);
  filter: drop-shadow(0 0 12px rgba(16, 185, 129, 1));
}
@media (max-width: 768px) {
  .nav-logo {
    height: 35px; /* slightly smaller on mobile */
  }
}

      /* MUSIC */
      .music iframe {
        border-radius: 12px;
        margin-top: 1rem;
      }

      /* SHOWS */
      .shows {
        background: var(--bg-soft);
        padding: 3rem 2rem;
        border-radius: 20px;
      }

      /* ABOUT */
      .about {
        max-width: 640px;
      }

      .about p {
        margin-bottom: 1rem;
        color: var(--muted);
      }

      /* CONTACT */
      .contact a {
        display: inline-block;
        margin-right: 1.5rem;
        margin-top: 1rem;
        font-size: 0.95rem;
        color: var(--muted);
      }

      .contact a:hover {
        color: var(--accent);
      }

      /* FOOTER */
      footer {
        margin-top: 6rem;
        text-align: center;
        font-size: 0.8rem;
        color: var(--muted);
      }

      @media (max-width: 768px) {
        section {
          margin-top: 4rem;
        }
      }
    </style>
  </head>

  <body>
    <!-- NAV -->
    <nav class="nav">
      <div class="nav-inner">
        <img src="/mattkindle/images/mklogobw.png" alt="Matt Kindle logo" class="nav-logo" />
        <div>
          <a href="#music">Music</a>
          <a href="#shows">Shows</a>
          <a href="#about">About</a>
          <a href="#contact">Contact</a>
        </div>
      </div>
    </nav>

    <main>
      <!-- HERO -->
      <section class="hero">
        <div class="hero-overlay"></div>
        <div class="hero-content">
          <img src="/mattkindle/images/mklogobw.png" alt="Matt Kindle logo" class="hero-logo" />
          <p class="hero-tagline">{tagline}</p>
        </div>
      </section>

      <!-- MUSIC -->
      <section id="music" class="music">
        <h2>Music</h2>

        <!-- Spotify -->
        <iframe
          data-testid="embed-iframe"
          style="border-radius:12px"
          src="https://open.spotify.com/embed/artist/4kPWNGfm8xjSXSsZesTk7y"
          width="100%"
          height="352"
          frameBorder="0"
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
          loading="lazy">
