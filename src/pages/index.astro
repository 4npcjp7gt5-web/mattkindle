---
const siteTitle = "Matt Kindle";
const tagline = "MATT KINDLE";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{siteTitle} — Official Website</title>
    <meta name="description" content="Official website of singer-songwriter Matt Kindle" />

    <!-- Google Fonts -->
    <link href="https://fonts.cdnfonts.com/css/rubik-dirt" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Inter:wght@300;400;500&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        --bg: #0f0f0f;
        --bg-soft: #161616;
        --text: #f3f3f3;
        --muted: #b5b5b5;
        --accent: #10b981; /* emerald */
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: "Inter", sans-serif;
        background: var(--bg);
        color: var(--text);
        line-height: 1.6;
        -webkit-font-smoothing: antialiased;
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      main {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 1.5rem 6rem;
      }

      section {
        margin-top: 6rem;
      }

      h1,
      h2 {
        font-family: "Playfair Display", serif;
        letter-spacing: 0.02em;
      }

      h2 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
        color: var(--accent);
      }

      /* NAV */
      .nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background: rgba(5, 120, 90, 0.9);
        backdrop-filter: blur(6px);
        z-index: 10;
        padding: 0.25rem 1.5rem;
      }

      .nav-inner {
        max-width: 1100px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .nav a {
        font-size: 0.9rem;
        margin-left: 1.5rem;
        color: #f3f3f3;
      }

      .nav a:hover {
        color: #ffffff;
      }

      .nav-logo {
        height: 50px;
        width: auto;
        position: relative;
        transform: translateY(25%);
        filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.8));
        transition: transform 0.3s ease, filter 0.3s ease;
      }

      .nav-logo:hover {
        transform: translateY(25%) scale(1.05);
        filter: drop-shadow(0 0 15px rgba(255, 255, 255, 1));
      }

      @media (max-width: 768px) {
        .nav-logo {
          height: 35px;
          transform: translateY(20%);
        }
      }

      /* HERO */
      .hero {
        position: relative;
        width: 100%;
        min-height: 100vh;
        display: flex;
        align-items: flex-end; /* push content to bottom */
        justify-content: center;
        overflow: hidden;
        margin-top: 0;

        background-image: url("/mattkindle/images/hero.jpg");
        background-size: cover;
        background-position: center center; /* desktop: full image */
        background-repeat: no-repeat;

        padding-bottom: 6rem;
        background-attachment: fixed; /* parallax on desktop */
      }

      .hero-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.45);
        z-index: 1;
        pointer-events: none;
      }

      .hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
        max-width: 1100px;
      }

      .hero-logo {
        max-width: 250px;
        width: 60%;
        height: auto;
        display: block;
        margin: 0 auto 1rem auto;
        filter: drop-shadow(0 0 15px rgba(16, 185, 129, 0.8));
        transition: transform 0.3s ease, filter 0.3s ease;
      }

      .hero-logo:hover {
        transform: scale(1.05);
        filter: drop-shadow(0 0 20px rgba(16, 185, 129, 1));
      }

      .hero-tagline {
        font-family: 'Rubik Dirt', serif, Georgia, Times, serif;
        font-size: clamp(2rem, 5vw, 3rem);
        color: var(--accent);
        text-shadow: 0 0 8px rgba(16, 185, 129, 0.6);
        margin-top: 0.5rem;
        letter-spacing: 0.3em;
      }

      .hero-tagline:hover {
        text-shadow: 0 0 12px rgba(16, 185, 129, 0.9);
      }

      @media (max-width: 1024px) {
        .hero {
          background-attachment: scroll; /* disables parallax on mobile */
          background-position: center bottom; /* focus on bottom for logo */
          min-height: 60vh;
          padding-bottom: 4rem;
        }

        .hero-logo {
          max-width: 180px;
        }

        .hero-tagline {
          font-size: clamp(1.5rem, 5vw, 2.5rem);
        }
      }

      /* MUSIC */
      .music iframe {
        border-radius: 12px;
        margin-top: 1rem;
      }

      /* SHOWS */
      .shows {
        background: var(--bg-soft);
        padding: 3rem 2rem;
        border-radius: 20px;
      }

      /* ABOUT */
      .about {
        max-width: 640px;
      }

      .about p {
        margin-bottom: 1rem;
        color: var(--muted);
      }

      /* CONTACT */
      .contact a {
        display: inline-block;
        margin-right: 1.5rem;
        margin-top: 1rem;
        font-size: 0.95rem;
        color: var(--muted);
      }

      .contact a:hover {
        color: var(--accent);
      }

      /* FOOTER */
      footer {
        margin-top: 6rem;
        text-align: center;
        font-size: 0.8rem;
        color: var(--muted);
      }

      @media (max-width: 768px) {
        section {
          margin-top: 4rem;
        }
      }
    </style>
  </head>

  <body>
    <!-- NAV -->
    <nav class="nav">
      <div class="nav-inner">
        <img src="/mattkindle/images/mklogobw.png" alt="Matt Kindle logo" class="nav-logo" />
        <div>
          <a href="#music">Music</a>
          <a href="#shows">Shows</a>
          <a href="#about">About</a>
          <a href="#contact">Contact</a>
        </div>
      </div>
    </nav>

    <main>
      <!-- HERO -->
      <section class="hero">
        <div class="hero-overlay"></div>
        <div class="hero-content">
          <img src="/mattkindle/images/mklogobw.png" alt="Matt Kindle logo" class="hero-logo" />
          <p class="hero-tagline">{tagline}</p>
        </div>
      </section>

      <!-- MUSIC -->
      <section id="music" class="music">
        <h2>Music</h2>
        <!-- Spotify -->
        <iframe
          data-testid="embed-iframe"
          style="border-radius:12px"
          src="https://open.spotify.com/embed/artist/4kPWNGfm8xjSXSsZesTk7y"
          width="100%"
          height="352"
          frameBorder="0"
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
          loading="lazy">
        </iframe>
        <!-- Apple Music -->
        <iframe height="450" width="100%" title="Media player" src="https://embed.music.apple.com/us/album/one-by-one/1805394672?itscg=30200&amp;itsct=music_box_player&amp;ls=1&amp;app=music&amp;mttnsubad=1805394672&amp;theme=dark" id="embedPlayer" sandbox="allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation-by-user-activation" allow="autoplay *; encrypted-media *; clipboard-write" style="border: 0px; border-radius: 12px; width: 100%; height: 450px;"></iframe>
      </section>

      <!-- SHOWS -->
      <section id="shows">
        <h2>Shows</h2>
        <script charset="utf-8" src="https://widgetv3.bandsintown.com/main.min.js"></script>
        <a class="bit-widget-initializer"
          data-artist-name="id_15630412"
          data-events-to-display=""
          data-background-color="rgba(8,110,67,1)"
          data-separator-color="rgba(7,7,7,1)"
          data-text-color="rgba(255,252,252,1)"
          data-font="Helvetica"
          data-auto-style="true"
          data-layout-breakpoint="600"
          data-app-id="695468e386442ab7aacc49b5c5ed6da8">
        </a>
      </section>

      <!-- ABOUT -->
      <section id="about" class="about">
        <h2>About</h2>
        <p>Matt Kindle is a singer-songwriter crafting honest songs rooted in melody, memory, and moments that linger.</p>
        <p>Inspired by God, family and fun with friends.</p>
      </section>

      <!-- CONTACT -->
      <section id="contact" class="contact">
        <h2>Contact</h2>
        <a href="mailto:mallets.prompts0z@icloud.com">Email</a>
        <a href="https://www.instagram.com/matt_kindle/" target="_blank" rel="noopener">Instagram</a>
        <a href="https://open.spotify.com/artist/4kPWNGfm8xjSXSsZesTk7y?si=Qtt2ejqIT-CV7jl6dKGnXw" target="_blank" rel="noopener">Spotify</a>
        <a href="https://www.youtube.com/@mattkindlemusic" target="_blank" rel="noopener">YouTube</a>
      </section>

      <footer>
        © {new Date().getFullYear()} Matt Kindle
      </footer>
    </main>
  </body>
</html>